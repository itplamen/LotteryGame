# See https://aka.ms/customizecontainer to learn how to customize your debug container and how Visual Studio uses this Dockerfile to build your images for faster debugging.

# This stage is used when running from VS in fast mode (Default for Debug configuration)
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER $APP_UID
WORKDIR /app
EXPOSE 8080
EXPOSE 8081


# This stage is used to build the service project
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["WalletService/Api/WalletService.Api/WalletService.Api.csproj", "WalletService/Api/WalletService.Api/"]
COPY ["Common/LotteryGame.Common.Models/LotteryGame.Common.Models.csproj", "Common/LotteryGame.Common.Models/"]
COPY ["WalletService/Core/WalletService.Core/WalletService.Core.csproj", "WalletService/Core/WalletService.Core/"]
COPY ["WalletService/Data/WalletService.Data/WalletService.Data.csproj", "WalletService/Data/WalletService.Data/"]
COPY ["WalletService/Data/WalletService.Data.Models/WalletService.Data.Models.csproj", "WalletService/Data/WalletService.Data.Models/"]
COPY ["WalletService/Core/WalletService.Core.Models/WalletService.Core.Models.csproj", "WalletService/Core/WalletService.Core.Models/"]
RUN dotnet restore "./WalletService/Api/WalletService.Api/WalletService.Api.csproj"
COPY . .
WORKDIR "/src/WalletService/Api/WalletService.Api"
RUN dotnet build "./WalletService.Api.csproj" -c $BUILD_CONFIGURATION -o /app/build

# This stage is used to publish the service project to be copied to the final stage
FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "./WalletService.Api.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

# This stage is used in production or when running from VS in regular mode (Default when not using the Debug configuration)
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "WalletService.Api.dll"]