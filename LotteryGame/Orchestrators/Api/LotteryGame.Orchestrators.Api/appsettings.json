{
  "Cache": {
    "UseInMemoryCache": false,
    "AbsoluteExpiration": 86400, // 60 * 60 * 24
    "ConnectionStrings": {
      "Redis": "redis:5005"
    }
  },
  "Grpc": {
    "WalletServiceUrl": "http://walletservice:5001",
    "WagerServiceUrl": "http://wagerservice:5002",
    "DrawServiceUrl": "http://drawservice:5003"
  },
  "Retry": {
    "Max": 3,
    "DelayMs": 5000
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Grpc": {
        "Url": "http://orchestrator:5000",
        "Protocols": "Http2"
      }
    }
  }
}
